{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "In debug",
          "cwd": "${workspaceFolder}",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/bins/bin/example_game",
          "stopAtEntry": false,
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "miDebuggerPath": "/usr/bin/gdb"
      }
  ]
}